---
import hero from '../assets/hero.png';
import basic from '../assets/fondo.png';
import '../styles/global.css';
---

<div class="relative h-screen">
  <div class="absolute inset-0">
    <img
      src={hero.src}
      alt="Fondo"
      class="w-full h-full object-cover"
    />
  </div>

  <div class="relative z-10 flex flex-col justify-start items-center h-full text-center px-4 pt-16 md:pt-32">
    
    <h2 class="text-sm md:text-base text-gray-600 uppercase mb-6 font-bold">
      Para profesionales fisioterapeutas
    </h2>

    <!-- Contenedor para el texto dinámico -->
    <div class="mb-8 max-w-xl mx-auto" style="min-height: 72px;">
      <h1
        id="dynamic-fade-text"
        style="color: #012c6d;"
        class="text-4xl md:text-5xl font-bold transition-opacity duration-500 opacity-100"
      >
        Conecta con más pacientes en línea
      </h1>
    </div>

    <p class="text-lg md:text-xl max-w-xl mx-auto">
      ¿Quieres saber más? Haz clic en el botón de abajo.
    </p>

    <a
      href="/mockups/index.html"
      target="_blank"
      class="px-8 py-3 text-base font-medium rounded-lg text-white bg-cyan-600 hover:bg-cyan-700 transform hover:scale-105 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500 mt-8">
      Probar Demo
    </a>
  </div>
</div>

  <!-- Information Section -->
  <div class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Más información</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- GitHub Repository Card -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <img src="https://images.unsplash.com/photo-1618401471353-b98afee0b2eb" alt="Code" class="w-full h-48 object-cover" />
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">
              <a href="https://github.com/Proyecto-ISPP/FISIOFIND" class="text-cyan-600 hover:text-cyan-800">Repositorio de Github</a>
            </h3>
            <p class="text-gray-600">Explora nuestro código y contribuye a nuestros proyectos open source.</p>
          </div>
        </div>

        <!-- Soon -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <img src="https://images.unsplash.com/photo-1522071820081-009f0129c71c" alt="Team" class="w-full h-48 object-cover" />
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">Proximamente</h3>
            <p class="text-gray-600">Mantente al día con nuestros últimos lanzamientos y actualizaciones.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Contact Form Section -->
  <div class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Contáctenos</h2>
      <div class="max-w-2xl mx-auto">
        <form class="space-y-8 bg-white p-8 rounded-lg shadow-lg" action="https://formsubmit.co/spprt.fisiofind@gmail.com" method="POST">
          <!-- Customize thank you page -->
          <input type="hidden" name="_next" value="https://fisiofind.netlify.app/thanks">
          <!-- Disable captcha -->
          <input type="hidden" name="_captcha" value="false">
          <!-- Prevent formsubmit.co redirect -->
          <input type="hidden" name="_template" value="table">
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">Nombre *</label>
              <input type="text" id="name" name="name" required 
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-cyan-500 focus:ring-cyan-500 transition-colors duration-200" 
                placeholder="Ingresa tu nombre" />
            </div>
            <div>
              <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email *</label>
              <input type="email" id="email" name="email" required 
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-cyan-500 focus:ring-cyan-500 transition-colors duration-200" 
                placeholder="Ingresa tu email" />
            </div>
          </div>
          
          <div>
            <label for="subject" class="block text-sm font-semibold text-gray-700 mb-2">Asunto</label>
            <input type="text" id="subject" name="subject" 
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-cyan-500 focus:ring-cyan-500 transition-colors duration-200" 
              placeholder="Escribe el asunto" />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">Mensaje</label>
            <textarea id="message" name="message" rows="4" 
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-cyan-500 focus:ring-cyan-500 transition-colors duration-200" 
              placeholder="Escribe tu mensaje aquí"></textarea>
          </div>
          
          <div class="text-center">
            <button type="submit" 
              class="px-8 py-3 text-base font-medium rounded-lg text-white bg-cyan-600 hover:bg-cyan-700 transform hover:scale-105 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500">
              Enviar Mensaje
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script is:inline>
  // Lista de frases que se irán rotando
  const phrases = [
    'Gestiona tu agenda fácilmente',
    'Muestra y destaca con tu experiencia',
    'Aumenta tu reputación online',
  ];

  let index = 0;
  const fadeText = document.getElementById('dynamic-fade-text');
  
  // Duración de la animación de fade (en ms)
  const fadeDuration = 500;
  // Tiempo que permanece cada frase antes de cambiar (en ms)
  const intervalDuration = 3000;

  setInterval(() => {
    // 1. Fade out
    fadeText.classList.remove('opacity-100');
    fadeText.classList.add('opacity-0');

    setTimeout(() => {
      // 2. Cambiamos la frase
      index = (index + 1) % phrases.length;
      fadeText.textContent = phrases[index];

      // 3. Fade in
      fadeText.classList.remove('opacity-0');
      fadeText.classList.add('opacity-100');
    }, fadeDuration);
  }, intervalDuration);
</script>
</div>
