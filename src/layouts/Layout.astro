---
import "../styles/global.css";
import logo from "../assets/logo.png";

// Importamos aquí las imágenes de "About" para poder prefetch/preload
import etsii from "../assets/etsii.jpeg";
import antonio_transparent from "../assets/members/antonio_transparent.png";
import ramon_transparent from "../assets/members/ramon_transparent.png";
import miguel_transparent from "../assets/members/miguel_transparent.png";
import rafa_transparent from "../assets/members/rafa_transparent.png";
import alors_transparent from "../assets/members/alors_transparent.png";
import barba_transparent from "../assets/members/barba_transparent.png";
import benji_transparent from "../assets/members/benji_transparent.png";
import capote_transparent from "../assets/members/capote_transparent.png";
import delfin_transparent from "../assets/members/delfin_transparent.png";
import guadalupe_transparent from "../assets/members/guadalupe_transparent.png";
import julen_transparent from "../assets/members/julen_transparent.png";
import pablo_transparent from "../assets/members/pablo_transparent.png";
import paco_transparent from "../assets/members/paco_transparent.png";
import rubio_transparent from "../assets/members/rubio_transparent.png";
import torto_transparent from "../assets/members/torto_transparent.png";
import vela_transparent from "../assets/members/vela_transparent.png";
import alberto_transparent from "../assets/members/alberto_transparent.png";

interface Props {
  title: string;
}

const { title } = Astro.props;

const services = [
  {
    title: "Teleconsulta Virtual",
    description: "Consultas online con fisioterapeutas",
    href: "/services/teleconsulta",
    icon: "fa-video",
  },
  {
    title: "Gestión de Pacientes",
    description: "Sistema integral de seguimiento",
    href: "/services/gestion-pacientes",
    icon: "fa-users",
  },
  {
    title: "Herramientas",
    description: "Biblioteca de ejercicios y rutinas",
    href: "/services/toolbox",
    icon: "fa-dumbbell",
  },
  {
    title: "Valoraciones Online",
    description: "Evaluación y diagnóstico virtual",
    href: "/services/valoraciones",
    icon: "fa-clipboard-list",
  },
];
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <!-- Para que el diseño sea responsive -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href={logo.src} />
    <meta name="generator" content={Astro.generator} />

    <!-- Prefetch (o preload) de las imágenes de la página "About" -->
    <!-- Prefetch: descarga en segundo plano cuando haya recursos libres -->
    <!-- Preload: descarga de inmediato, pero afecta la carga inicial -->
    <!-- Ajusta según tus necesidades: -->
    <link rel="prefetch" href={etsii.src} as="image" />
    <link rel="prefetch" href={antonio_transparent.src} as="image" />
    <link rel="prefetch" href={ramon_transparent.src} as="image" />
    <link rel="prefetch" href={miguel_transparent.src} as="image" />
    <link rel="prefetch" href={rafa_transparent.src} as="image" />
    <link rel="prefetch" href={alors_transparent.src} as="image" />
    <link rel="prefetch" href={barba_transparent.src} as="image" />
    <link rel="prefetch" href={benji_transparent.src} as="image" />
    <link rel="prefetch" href={capote_transparent.src} as="image" />
    <link rel="prefetch" href={delfin_transparent.src} as="image" />
    <link rel="prefetch" href={guadalupe_transparent.src} as="image" />
    <link rel="prefetch" href={julen_transparent.src} as="image" />
    <link rel="prefetch" href={pablo_transparent.src} as="image" />
    <link rel="prefetch" href={paco_transparent.src} as="image" />
    <link rel="prefetch" href={rubio_transparent.src} as="image" />
    <link rel="prefetch" href={torto_transparent.src} as="image" />
    <link rel="prefetch" href={vela_transparent.src} as="image" />
    <link rel="prefetch" href={alberto_transparent.src} as="image" />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <!-- HEADER -->
    <header class="fixed w-full bg-white shadow-sm z-50">
      <nav class="container mx-auto px-4 py-3">
        <div class="flex justify-between items-center">
          <!-- Logo + nombre -->
          <div class="flex items-center gap-2">
            <img src={logo.src} alt="Fisio Find Logo" class="h-8 w-8" />
            <a href="/" class="text-2xl font-bold text-cyan-600">
              Fisio Find
            </a>
          </div>
          <div class="hidden md:flex space-x-6 items-center">
            <a href="/" class="text-gray-600 hover:text-cyan-600">Inicio</a>
            <a
              href="https://ppl.fisiofind.com"
              class="text-gray-600 hover:text-cyan-600"
            >
              Última versión
              <span
                class="ml-2 inline-block bg-cyan-100 text-cyan-700 text-xs font-semibold px-1 py-0.5 rounded"
              >
                ¡NUEVO!
              </span>
            </a>
            <a href="/inversores" class="text-gray-600 hover:text-cyan-600">
              Inversores
            </a>
            <a href="/precios" class="text-gray-600 hover:text-cyan-600">
              Precios
            </a>
            <!-- Services Dropdown -->
            <div class="relative group">
              <button
                class="flex items-center space-x-2 text-gray-600 hover:text-cyan-600"
              >
                <span>Servicios</span>
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>

              <!-- Dropdown Menu -->
              <div
                class="absolute left-0 mt-2 w-80 bg-white border border-gray-100 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 ease-in-out transform group-hover:translate-y-0 translate-y-1 hover:delay-300"
              >
                <div class="p-4">
                  {
                    services.map((service) => (
                      <a
                        href={service.href}
                        class="flex items-center p-3 rounded-lg hover:bg-gray-50"
                      >
                        <i class={`fas ${service.icon} text-cyan-600 w-5`} />
                        <div class="ml-3">
                          <p class="text-sm font-medium text-gray-900">
                            {service.title}
                          </p>
                          <p class="mt-1 text-xs text-gray-500">
                            {service.description}
                          </p>
                        </div>
                      </a>
                    ))
                  }
                </div>
              </div>
            </div>

            <a href="/help" class="text-gray-600 hover:text-cyan-600">
              Ayuda
            </a>
            <a href="/about" class="text-gray-600 hover:text-cyan-600">
              Acerca de
            </a>
          </div>

          <!-- Botón Hamburguesa (sólo en mobile) -->
          <button
            id="menu-btn"
            class="md:hidden focus:outline-none text-gray-600 hover:text-cyan-600"
            aria-label="Abrir menú"
          >
            <!-- Icono hamburguesa -->
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M4 5h16v2H4zm0 6h16v2H4zm0 6h16v2H4z"
              ></path>
            </svg>
          </button>
        </div>

        <!-- Menú móvil (oculto por defecto) -->
        <div
          id="mobile-menu"
          class="md:hidden hidden flex-col space-y-2 mt-2"
          role="menu"
        >
          <a href="/" class="block py-1 text-gray-600 hover:text-cyan-600">
            Inicio
          </a>
          <a
            href="https://ppl.fisiofind.com"
            class="block py-1 text-gray-600 hover:text-cyan-600"
          >
            Última versión
            <span
              class="ml-2 inline-block bg-cyan-100 text-cyan-700 text-xs font-semibold px-1 py-0.5 rounded"
            >
              ¡NUEVO!
            </span>
          </a>
          <a
            href="/precios"
            class="block py-1 text-gray-600 hover:text-cyan-600"
          >
            Precios
          </a>
          <a href="/inversores" class="block py-1 text-gray-600 hover:text-cyan-600">
            Inversores
          </a>
          <div>
            <button
              id="mobile-services-btn"
              class="w-full text-left flex justify-between items-center py-1 text-gray-600 hover:text-cyan-600"
            >
              <span>
                Servicios
              </span>
              <svg
                class="w-4 h-4 transition-transform transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div id="mobile-services-menu" class="hidden pl-4">
              {
                services.map((service) => (
                  <a
                    href={service.href}
                    class="block py-1 text-gray-600 hover:text-cyan-600"
                  >
                    {service.title}
                  </a>
                ))
              }
            </div>
          </div>
          <a href="/help" class="block py-1 text-gray-600 hover:text-cyan-600">Ayuda</a>
          <a href="/about" class="block py-1 text-gray-600 hover:text-cyan-600">
            Acerca de
          </a>
        </div>
      </nav>
    </header>

    <!-- Contenido principal -->
    <main class="pt-16">
      <slot />
    </main>

    <!-- FOOTER -->
    <footer class="bg-gray-800 text-white py-8 mt-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">Información de contacto</h3>
            <p>Email: info@fisiofind.com</p>
            <p>Dirección: Av. de la Reina Mercedes, 41012 Sevilla, España</p>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">Enlaces</h3>
            <ul class="space-y-2">
              <li>
                <a href="/" class="hover:text-indigo-400">Inicio</a>
              </li>
              <li>
                <a href="/precios" class="hover:text-indigo-400">Precios</a>
              </li>
              <li>
                <a href="/about" class="hover:text-indigo-400">Acerca de</a>
              </li>
              <li>
                <a href="/about" class="hover:text-indigo-400">Acerca de</a>
              </li>
              <li>
                <a href="/services/teleconsulta" class="hover:text-indigo-400">
                  Teleconsulta Virtual
                </a>
              </li>
              <li>
                <a
                  href="/services/gestion-pacientes"
                  class="hover:text-indigo-400"
                >
                  Gestión de Pacientes
                </a>
              </li>
              <li>
                <a href="/services/toolbox" class="hover:text-indigo-400">
                  Herramientas
                </a>
              </li>
              <li>
                <a href="/services/valoraciones" class="hover:text-indigo-400">
                  Valoraciones Online
                </a>
              </li>
              <li>
                <a href="/help" class="hover:text-indigo-400">Ayuda</a>
              </li>
              <li>
                <a href="/about" class="hover:text-indigo-400">Acerca de</a>
              </li>
            </ul>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">¡Síguenos!</h3>
            <div class="flex space-x-4">
              <a
                href="https://www.instagram.com/fisiofindapp?igsh=MThoYTdjYWp1NXN6ZA=="
                class="hover:text-indigo-400"
              >
                Instagram
              </a>
            </div>
          </div>
        </div>
        <div class="text-center mt-8 pt-8 border-t border-gray-700">
          <p>&copy; 2025 Fisio Find. Todos los derechos reservados.</p>
        </div>
      </div>
    </footer>

    <!-- Script para alternar menú móvil -->
    <script is:inline>
      document.addEventListener("DOMContentLoaded", () => {
        const menuBtn = document.getElementById("menu-btn");
        const mobileMenu = document.getElementById("mobile-menu");
        const servicesBtn = document.getElementById("mobile-services-btn");
        const servicesMenu = document.getElementById("mobile-services-menu");
        const servicesIcon = servicesBtn.querySelector("svg");

        menuBtn.addEventListener("click", () => {
          mobileMenu.classList.toggle("hidden");
        });

        servicesBtn.addEventListener("click", () => {
          servicesMenu.classList.toggle("hidden");
          servicesIcon.classList.toggle("rotate-180");
        });
      });
    </script>
  </body>
</html>
