---
import "../styles/global.css";
import logo from "../assets/logo.png";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href={logo.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="fixed w-full bg-white shadow-sm z-50">
      <nav class="container mx-auto px-4 py-3">
        <div class="flex justify-between items-center">
          <div class="flex items-center gap-2">
            <img src={logo.src} alt="Fisio Find Logo" class="h-8 w-8" />
            <a href="/" class="text-2xl font-bold text-cyan-600">Fisio Find</a>
          </div>
          <div class="hidden md:flex space-x-6">
            <a href="/" class="text-gray-600 hover:text-cyan-600">Inicio</a>

            <a href="/mockups/index.html" class="text-gray-600 hover:text-cyan-600">
              Demo
              <span class="ml-2 inline-block bg-cyan-100 text-cyan-700 text-xs font-semibold px-1 py-0.5 rounded">
                ¡NUEVO!
              </span>
            </a>
            <a href="/precios" class="text-gray-600 hover:text-cyan-600"
              >Precios</a
            >
            <a href="/about" class="text-gray-600 hover:text-cyan-600">Acerca de</a>
          </div>
        </div>
      </nav>
    </header>

    <main class="pt-16">
      <slot />
    </main>

    <footer class="bg-gray-800 text-white py-8 mt-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">Información de contacto</h3>
            <p>Email: info@fisiofind.com</p>
            <p>Dirección: Av. de la Reina Mercedes, 41012 Sevilla, España</p>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">Enlaces</h3>
            <ul class="space-y-2">
              <li><a href="/" class="hover:text-indigo-400">Inicio</a></li>
              <li>
                <a href="/precios" class="hover:text-indigo-400">Precios</a>
              </li>
              <li><a href="/about" class="hover:text-indigo-400">Acerca de</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">!Síguenos!</h3>
            <div class="flex space-x-4">
              <a
                href="https://www.instagram.com/fisiofindapp?igsh=MThoYTdjYWp1NXN6ZA=="
                class="hover:text-indigo-400">Instagram</a
              >
            </div>
          </div>
        </div>
        <div class="text-center mt-8 pt-8 border-t border-gray-700">
          <p>&copy; 2025 Fisio Find. Todos los derechos reservados.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
